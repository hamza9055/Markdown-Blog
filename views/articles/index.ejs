<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Markdown Blog</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/style.css">

  <style>
    .empty-state {
      height: 60vh;
      display: flex;
      justify-content: center;
      align-items: center;
    }
  </style>
</head>

<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
    <div class="container">
      <a class="navbar-brand" href="/">Markdown Blog</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="btn btn-success" href="/articles/new">New Article</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container">

    <% if (articles.length === 0) { %>
      <div class="empty-state">
        <div class="card text-center shadow-lg p-5">
          <h2 class="mb-3">No Articles Yet</h2>
          <p class="mb-4">Get started by creating your first Markdown article!</p>
          <a href="/articles/new" class="btn btn-success btn-lg">Create Your First Article</a>
        </div>
      </div>
    <% } else { %>
      <div class="row row-cols-1 row-cols-md-2 g-4">
        <% articles.forEach(article => { %>
          <div class="col">
            <div class="card h-100 shadow-sm">
              <div class="card-body d-flex flex-column">
                <h4 class="card-title"><%= article.title %></h4>
                <div class="card-subtitle text-muted mb-2">
                  <%= article.createdAt.toLocaleDateString() %>
                </div>
                <p class="card-text"><%= article.description %></p>
                <div class="mt-auto">
                  <a href="/articles/<%= article.slug %>" class="btn btn-primary btn-space">Read More</a>
                  <a href="/articles/edit/<%= article.id %>" class="btn btn-info text-white btn-space">Edit</a>
                  <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger">Delete</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>

  </div>

  <!-- Bootstrap JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-QNZhY4VAX8oG9V9xn0mcP7DJuNFAhH2m6CD+Rmr7PNs8co/Et5vYzFpp5jWxS7hD"
    crossorigin="anonymous"></script>
</body>

</html>
