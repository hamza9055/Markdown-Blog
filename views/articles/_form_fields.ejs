<div class="mb-3">
    <label for="title" class="form-label">Title</label>
    <input type="text" class="form-control" id="title" name="title" value="<%= article.title %>" required>
</div>

<div class="mb-3">
    <label for="description" class="form-label">Description</label>
    <input type="text" class="form-control" id="description" name="description" value="<%= article.description %>">
</div>

<div class="mb-3">
    <label for="markdown" class="form-label">Markdown Content</label>
    <textarea class="form-control" id="markdown" name="markdown" rows="10" required><%= article.markdown %></textarea>
</div>

<button type="submit" class="btn btn-primary">Save Article</button>
<a href="/" class="btn btn-secondary ms-2">Cancel</a>
